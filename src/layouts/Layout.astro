---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";

const { title = "Taj Hans" } = Astro.props;
const currentPath = Astro.url.pathname;
---

<html lang="en" class="scroll-smooth">
<head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <ClientRouter />
</head>
<body class="min-h-screen grid grid-rows-[auto_1fr_auto] text-4xl leading-relaxed text-stone-900">
<header class="flex justify-between items-start p-10" transition:name="main-header" transition:animate="none">
    <h1 class="text-5xl">Taj Hans</h1>
    <nav>
        <ul class="flex gap-12 text-3xl">
            <li>
                <a
                        href="/"
                        class={`hover:underline ${currentPath === "/" ? "underline" : ""}`}
                >
                    about
                </a>
            </li>
            <li>
                <a
                        href="/projects"
                        class={`hover:underline ${currentPath === "/projects" ? "underline" : ""}`}
                >
                    projects
                </a>
            </li>
        </ul>
    </nav>
</header>

<main class="px-12">
    <slot />
</main>

